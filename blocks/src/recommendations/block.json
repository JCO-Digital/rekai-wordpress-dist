{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "rekai/recommendations",
  "version": "0.1.0",
  "title": "Rek.ai Recommendations",
  "category": "widgets",
  "icon": "editor-ul",
  "description": "Recommendations block using Rek.ai.",
  "example": {},
  "supports": {
    "html": false
  },
  "attributes": {
    "nrofhits": {
      "type": "string",
      "default": "10"
    },
    "headerText": {
      "type": "string",
      "default": ""
    },
    "showHeader": {
      "type": "boolean",
      "default": false
    },
    "pathOption": {
      "type": "string",
      "default": "all",
      "enum": ["all", "rootPath", "maxDepth", "rootPathLevel"]
    },
    "depth": {
      "type": "number",
      "default": 1
    },
    "limit": {
      "type": "string",
      "default": "none",
      "enum": ["none", "subPages", "minDepth"]
    },
    "limitDepth": {
      "type": "number",
      "default": 1
    },
    "renderstyle": {
      "type": "string",
      "default": "",
      "enum": ["list", "pills", "advanced"]
    },
    "listcols": {
      "type": "string",
      "default": "1"
    },
    "currentLanguage": {
      "type": "boolean",
      "default": true
    },
    "addcontent": {
      "type": "boolean",
      "default": false
    },
    "subtree": {
      "type": "string",
      "default": ""
    }
  },
  "textdomain": "rekai-wordpress",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}
