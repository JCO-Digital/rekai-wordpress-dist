{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "rekai/recommendations",
  "version": "0.1.0",
  "title": "Rek.ai Recommendations",
  "category": "widgets",
  "icon": "editor-ul",
  "description": "Recommendations block using Rek.ai.",
  "usesContext": [
    "postType",
    "postId"
  ],
  "example": {},
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ],
    "background": {
      "backgroundImage": true,
      "backgroundSize": true
    },
    "color": {
      "background": true,
      "text": true
    },
    "spacing": {
      "padding": true,
      "margin": false
    }
  },
  "attributes": {
    "blockType": {
      "type": "string",
      "default": "recommendations"
    },
    "nrOfHits": {
      "type": "number",
      "default": 10
    },
    "headerText": {
      "type": "string",
      "default": ""
    },
    "showHeader": {
      "type": "boolean",
      "default": false
    },
    "pathOption": {
      "type": "string",
      "default": "all",
      "enum": [
        "all",
        "rootPath",
        "subTree",
        "rootPathLevel"
      ]
    },
    "rootPathLevel": {
      "type": "number",
      "default": 1
    },
    "limitations": {
      "type": "string",
      "default": "none",
      "enum": [
        "none",
        "subPages",
        "childNodes",
        "onPageLinks"
      ]
    },
    "renderStyle": {
      "type": "string",
      "default": "list",
      "enum": [
        "list",
        "pills",
        "advanced"
      ]
    },
    "listCols": {
      "type": "number",
      "default": "1"
    },
    "cols": {
      "type": "number",
      "default": "2"
    },
    "showImage": {
      "type": "boolean",
      "default": true
    },
    "fallbackImgSrc": {
      "type": "string",
      "default": ""
    },
    "showIngress": {
      "type": "boolean",
      "default": true
    },
    "ingressMaxLength": {
      "type": "number",
      "default": 100
    },
    "showLangs": {
      "type": "boolean",
      "default": false
    },
    "allowedLangs": {
      "type": "string",
      "default": ""
    },
    "tags": {
      "type": "array",
      "default": []
    },
    "subTree": {
      "type": "array",
      "default": []
    },
    "excludeTree": {
      "type": "array",
      "default": []
    },
    "extraAttributes": {
      "type": "string",
      "default": ""
    }
  },
  "textdomain": "rekai-wordpress",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}